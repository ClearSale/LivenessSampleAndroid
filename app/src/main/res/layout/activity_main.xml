<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgVwAuditImage"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/black"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textClientId"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="ClientId*"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/clientId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/rounded_edit_text"
                android:ems="30"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="clientId" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textClientSecret"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="ClientSecret*"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/clientSecret"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/rounded_edit_text"
                android:ems="30"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="clientSecret" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textIdentifierId"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="IdentifierId*"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/identifierId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:ems="30"
                android:background="@drawable/rounded_edit_text"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="identifierId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clientSecret" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textCpf"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="CPF"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:ems="30"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/rounded_edit_text"
                android:inputType="number"
                android:minHeight="48dp"
                android:hint="cpf" />
        </LinearLayout>
        <Button
            android:id="@+id/startSdk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:text="Chamar SDK"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp"
            android:text="Response: "
            android:textStyle="bold" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textVocalGuidance"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="Vocal Guidance"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/vocalGuidance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textPrimaryColor"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="PrimaryColor"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/primaryColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edit_text"
                android:ems="30"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="primaryColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textSecondaryColor"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="SecondaryColor"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/secondaryColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/rounded_edit_text"
                android:ems="30"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="secondaryColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textTitleColor"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="TitleColor"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/titleColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/rounded_edit_text"
                android:ems="30"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="titleColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/textParagraphColor"
                android:layout_width="112dp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="ParagraphColor"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <EditText
                android:id="@+id/paragraphColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/rounded_edit_text"
                android:ems="30"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:hint="paragraphColor" />
        </LinearLayout>
        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textAlignment="center"/>
    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>